# Database Configuration (PostgreSQL required for production)
# Get a free PostgreSQL database from: https://neon.tech or https://supabase.com
DATABASE_URL=postgresql://username:password@host:5432/database_name

# SendGrid Email Service (Required for production)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Your Business Name

# Security (Required for production)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=86400

# App Configuration
NEXT_PUBLIC_BASE_URL=https://yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com
NODE_ENV=production

# Optional Analytics
NEXT_PUBLIC_GA_ID=your_google_analytics_id

# Optional Contact Form Service
CONTACT_FORM_ENDPOINT=your_form_endpoint
